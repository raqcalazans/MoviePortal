<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:padding="20dp"
    tools:context=".view.MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_favorite"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/yellow"
        android:layout_marginTop="50dp"
        android:text="@string/btn_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_name"
        app:layout_constraintBottom_toTopOf="@id/btn_popular"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_popular"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/dark_red"
        android:text="@string/btn_popular"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/btn_favorite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_top"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_top"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/dark_grey"
        android:text="@string/btn_top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_popular"
        app:layout_constraintBottom_toTopOf="@+id/btn_upcoming"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_upcoming"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/light_grey"
        android:text="@string/btn_upcoming"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_top"
        app:layout_constraintBottom_toTopOf="@id/btn_latest"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_latest"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/btn_latest"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_upcoming"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="50dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>